<Window x:Class="TextureBackgroundViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextureBackgroundViewer"
        mc:Ignorable="d"
        x:Name="window"
        Title="{Binding Title}" Height="442" Width="743">
    <Window.DataContext>
        <local:MainWindow />
    </Window.DataContext>
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Background="AliceBlue" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Цвет оверлея" HorizontalAlignment="Center"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Белый" 
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Черный"
                       HorizontalAlignment="Center" />
            <Border Grid.Row="2" Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Margin="8"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <Rectangle Fill="White" Width="64" Height="64" x:Name="rectWhite" MouseDown="rectWhite_MouseDown" />
            </Border>
            <Border Grid.Row="2" Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" Margin="8"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <Rectangle Fill="Black" Width="64" Height="64" x:Name="rectBlack" MouseDown="rectBlack_MouseDown" />
            </Border>
            <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                       Text="{Binding OpacitySliderValue, StringFormat={}Прозрачность {0:P0}}" HorizontalAlignment="Center"/>
            <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2">
                <Slider Minimum="0" Maximum="1" Value="{Binding OpacitySliderValue}"/>
            </Grid>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="W" 
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Row="5" Grid.Column="1" Text="H" 
                       HorizontalAlignment="Center"/>
            <TextBox Grid.Row="6" Grid.Column="0" Text="{Binding TextureWidth}" />
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding TextureHeight}" />

        </Grid>
        <ScrollViewer>
            <ItemsControl Grid.Column="0" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                      ItemsSource="{Binding TexturesCollection}" Background="White">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button x:Name="btnSetTexture" Click="btnSetTexture_Click" Tag="{Binding}" Background="Transparent">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Border Padding="2" BorderThickness="1" BorderBrush="LightGray">
                                    <Image Width="50" Height="50" Source="{Binding FullName}" ToolTip="{Binding FullName}" />
                                </Border>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
